<% layout('../layout') -%>

<h1>New Traq</h1>
<form method="post" action="/traq/create">
    <div>
      <label for="title">Title:</label>
      <input type="text" id="title" name="title">
    </div>
    <div>
      <label for="artist">Runtime:</label>
      <input type="text" id="runtime" name="runtime">
    </div>
    <div>
      <label for="label">Audio File:</label>
      <input type="url" id="audio" name="audio">
    </div>
    <div>
      <select id="album_id" name="album_id">
        <% for(i in albums) { %>
          <option value="<%= albums[i]['id'] %>"><%= albums[i]['title'] %></option>
        <% } %>
      </select>
    <div>
      <input type="submit" value="Create">
    </div>
</form>

