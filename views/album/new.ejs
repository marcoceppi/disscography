<% layout('../layout') -%>

<h1 style="font-size: 200px">YEAH BRO</h1>
<form method="post" action="/album/create">
    <div>
    <label for="title">Title:</label>
    <input type="text" id="title" name="title"></input>
    </div>

    <div>
    <label for="artist">Artist:</label>
    <input type="text" id="artist" name="artist"></input>
    </div>

    <div>
    <label for="label">Label:</label>
    <input type="text" id="label" name="label"></input>
    </div>

    <div>
    <label for="year">Year:</label>
    <input type="text" min="10000" max="2014" id="year" name="year"></input>
    </div>

    <div>
    <label for="genre">Genre:</label>
    <input type="text" id="genre" name="genre"></input>
    </div>

    <div>
    <label for="album_cover">Album Cover (URL):</label>
    <input type="text" id="album_cover" name="album_cover"></input>
    </div>

    <div>
    <input type="submit" value="SUBMIT BRO"></input>
    </div>
</form>
