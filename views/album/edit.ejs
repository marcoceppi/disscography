<% layout('../layout') -%>

  <h1>You are editing <%= album['title'] %> bro</h1>
<form method="post" action="/album/update">
    <div>
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" value="<%= album['title'] %>" disabled></input>
    </div>

    <div>
    <label for="artist">Artist:</label>
    <input type="text" id="artist" name="artist" value="<%= album['artist'] %>"></input>
    </div>

    <div>
    <label for="label">Label:</label>
    <input type="text" id="label" name="label" value="<%= album['label'] %>"></input>
    </div>

    <div>
    <label for="year">Year:</label>
    <input type="text" min="10000" max="2014" id="year" name="year" value="<%= album['year'] %>"></input>
    </div>

    <div>
    <label for="genre">Genre:</label>
    <input type="text" id="genre" name="genre" value="<%= album['genre'] %>"></input>
    </div>

    <div>
    <label for="album_cover">Album Cover (URL):</label>
    <input type="text" id="album_cover" name="album_cover" value="<%= album['album_cover'] %>"></input>
    </div>

    <div>
    <input type="hidden" id="id" name="id" value="<%= album['id'] %>"></input>
    <input type="submit" value="SUBMIT BRO"></input>
    <input type="button" href="/album/destroy/<%= album['id'] %>" value="DELETE THIS MOTHER">
    </div>
</form>
